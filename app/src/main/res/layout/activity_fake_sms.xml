<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.belmedia.fakecallsandsms.activities.FakeSMS"

    android:background="@drawable/bg_repeat">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pick contact"
        android:onClick="onClick"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"/>


    <include layout="@layout/contact_cell" />

    <EditText
        android:id="@+id/editText_body_sms"
        android:hint="Massage body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:lines="3"
        android:minLines="2"
        android:maxLines="10"
        android:scrollbars="vertical"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send SMS in:"
        android:layout_margin="5dp"
        android:textAppearance="@android:style/TextAppearance.Large"/>

   <com.belmedia.fakecallsandsms.ToggleButtonGroupTableLayout
       android:id="@+id/radio_group_time_picker"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center">

       <TableRow>

           <RadioButton
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:checked="true"
               android:text="10 sec"
               android:id="@+id/radioButton10sec" />

           <RadioButton
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="30 sec"
               android:id="@+id/radioButton30sec" />

           <RadioButton
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="5 minutes"
               android:id="@+id/radioButton5min" />
       </TableRow>

       <TableRow>

           <RadioButton
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="15 minutes"
               android:id="@+id/radioButton15min" />

           <RadioButton
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="custom"
               android:id="@+id/radioButtonCustom" />
       </TableRow>

   </com.belmedia.fakecallsandsms.ToggleButtonGroupTableLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Custom:"
            android:textAppearance="@android:style/TextAppearance.Large"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint=" 20 "
            android:id="@+id/editText_custom_time" />

        <Spinner
            android:id="@+id/spinner_custom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/spinner_choices"
            android:layout_marginLeft="10dp"
            android:cursorVisible="false"/>




    </LinearLayout>

    <Button
        android:id="@+id/button_call"
        android:layout_margin="10dp"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="Send"
        android:layout_gravity="center"
        android:onClick="triggerSmsSend"/>



</LinearLayout>
