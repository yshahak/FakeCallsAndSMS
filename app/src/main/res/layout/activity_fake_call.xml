<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.belmedia.fakecallsandsms.activities.FakeCall">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">


        <TextView
            android:gravity="center"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_margin="5dp"
            android:text="Add\npicture"
            android:id="@+id/button_add_picture"
            android:background="@color/gray"/>

        <TextView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:gravity="center"
            android:text="Add \nVoice"
            android:id="@+id/button_add_voice"
            android:background="@color/gray"
            android:layout_margin="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/editText_caller_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Caller name"
            android:inputType="text"
            android:cursorVisible="false"/>

        <EditText
            android:id="@+id/editText_caller_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Caller number"
            android:inputType="numberDecimal"
            android:cursorVisible="false"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make the call in:"
        android:layout_margin="20dp"
        android:textAppearance="@android:style/TextAppearance.Large"/>

    <com.belmedia.fakecallsandsms.ToggleButtonGroupTableLayout
        android:id="@+id/radio_group_time_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TableRow>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="10 sec"
                android:id="@+id/radioButton10sec" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 sec"
                android:id="@+id/radioButton30sec" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 minutes"
                android:id="@+id/radioButton5min" />
        </TableRow>

        <TableRow>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 minutes"
                android:id="@+id/radioButton15min" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="custom"
                android:id="@+id/radioButtonCustom" />
        </TableRow>

    </com.belmedia.fakecallsandsms.ToggleButtonGroupTableLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Custom:"
            android:textAppearance="@android:style/TextAppearance.Large"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint=" 20 "
            android:id="@+id/editText_custom_time" />

        <Spinner
            android:id="@+id/spinner_custom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/spinner_choices"
            android:layout_marginLeft="10dp"
            android:cursorVisible="false"/>




    </LinearLayout>

    <Button
        android:id="@+id/button_call"
        android:layout_margin="20dp"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="Call"
        android:layout_gravity="center"
        android:onClick="triggerCallAlarm"/>



</LinearLayout>
