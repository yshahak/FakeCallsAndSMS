<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:showIn="@layout/activity_fake_call"
    android:layout_marginTop="2dp">

    <ImageView
        android:id="@+id/button_add_contact"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/call_pick_contact_btn"        />



    <LinearLayout
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"

        android:orientation="vertical"
        android:layout_gravity="center">


        <ImageView
            android:id="@+id/contact_picture_holder"

            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/call_pic"
            android:scaleType="centerInside"
            android:background="@drawable/white_round_bkg" />

        <ImageView
            android:layout_marginTop="3dp"
            android:id="@+id/contact_picture_btn"
            android:layout_width="50dp"
            android:layout_height="17dp"
            android:src="@drawable/call_add_photo_btn"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_gravity="center">

        <EditText
            android:id="@+id/editText_caller_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_margin="3dp"
            android:hint="Caller name"
            android:inputType="text"
            android:background="@drawable/white_round_bkg_small"/>

        <EditText
            android:id="@+id/editText_caller_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:hint="Caller number"
            android:inputType="text"
            android:background="@drawable/white_round_bkg_small" />
    </LinearLayout>


</LinearLayout>