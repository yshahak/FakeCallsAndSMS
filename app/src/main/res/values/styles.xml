<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>

    </style>

    <style name="SpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textColor">#ffffff</item>
    </style>

    <!-- Main activity theme. -->
    <style name="chatStyle" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="colorPrimary">@color/tb_bg</item>

    </style>

    <!-- main activity action bar styles -->
    <style name="ActionBar" parent="AppTheme">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@android:drawable/ic_delete</item>
    </style>

    <style name="checkBox_style" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#ffffff</item>

        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="checkBox_edit_text_style" parent="checkBox_style">
        <item name="android:textSize">8sp</item>
    </style>

    <style name="edit_text_msg_style" parent = "@android:style/TextAppearance.Medium">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
